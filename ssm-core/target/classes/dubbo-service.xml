<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://code.alibabatech.com/schema/dubbo
		http://code.alibabatech.com/schema/dubbo/dubbo.xsd
		">

	<!-- app版本服务-->
	<dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.AppVersionFacade" ref="appVersionCoreFacade" retries="0" />

  	<!-- 合伙人服务 -->
  	<dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.RecommenderFacade" ref="recommenderCoreFacade" retries="0" />

	<!-- Pos服务 -->
	<dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.PosFacade" ref="posCoreFacade" retries="0" />

	<!-- 反馈意见服务 -->
	<dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.AppFeedbackFacade" ref="appFeedbackFacade" retries="0" />

	<!-- 操作员服务 -->
	<dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.OperatorFacade" ref="operatorCoreFacade" retries="0" />

    <!-- 报单奖励对外服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.outer.dubbo.RecommenderCustRewardFacade" ref="recommenderCustRewardCoreFacade" retries="0" registry="lefuRegistry"/>

    <!-- 乐收返现对外服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.outer.dubbo.RecommenderPrctRewardFacade" ref="recommenderPrctRewardCoreFacade" retries="0" registry="lefuRegistry"/>

    <!-- 商户入网核心服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.CustomerSubmitFacade" ref="customerSubmitCoreFacade" retries="0"/>

    <!-- 优惠商户入网核心服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.DiscountCustomerSubmitFacade" ref="discountCustomerSubmitCoreFacade" retries="0"/>

	<!-- Pos采购核心服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.PosPurchaseFacade" ref="posPurchaseCoreFacade" retries="0"/>

	 <!-- 资质补充核心服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.QualificationSupplementFacade" ref="qualificationSupplementCoreFacade" retries="0"/>

    <!-- app消息推送核心服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.MessagePushFacade" ref="messagePushFacade" retries="0"/>

    <!-- 商户核心服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.CustomerFacade" ref="customerCoreFacade" retries="0"/>

	<!-- app公告核心服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.AppNoticeInfoFacade" ref="appNoticeInfoCoreFacade" retries="0"/>

    <!-- 风险处理服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.RiskFacade" ref="riskCoreFacade" retries="0"/>

	<!-- 消息服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.AppMessageInfoFacade" ref="appMessageInfoCoreFacade" retries="0"/>

	<!-- 电子协议服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.SignFacade" ref="signCoreFacade" retries="0"/>

    <!-- 500会员接口 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.RecommenderMemberFacade" ref="recommenderMemberCoreFacade" retries="0"/>

    <!-- 500会员采购机具接口 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.SpecialPosPurchaseFacade" ref="specialPosPurchaseFacade" retries="0"/>
    
    <!-- 资质文件上传下载接口 -->
     <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.QualificationFileFacade" ref="qualificationFileCoreFacade" retries="0"/>
    
    <!-- 查询加盟及实名认证状态接口 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.RecommenderJoinStatusFacade" ref="recommenderJoinStatusCoreFacade" retries="0"/>
    
    <!-- 优惠商户接口 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.FavorCustomerFacade" ref="favorCustomerCoreFacade" retries="0"/>
    
    <!-- 银行卡相关服务 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.BankCardFacade" ref="bankCardCoreFacade" retries="0"/>
    
    <!-- 优惠类商户类型与特殊资质类型关系接口 -->
    <dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.DiscountCustImgRelationFacade" ref="discountCustImgRelationCoreFacade" retries="0"/>
    
    <!-- 消息通知服务 -->
    <dubbo:service group="allianceOut" interface="com.lefu.alliance.api.outer.dubbo.MessageNoticeFacade" ref="messageNoticeOutFacade" retries="0"/>
   
   	<!-- 消息服务 --> 
   	<dubbo:service group="core" interface="com.lefu.alliance.api.inner.dubbo.AllianceMessageFacade" ref="allianceMessageCoreFacade" retries="0"/>
    
    <!-- 商户费率信息变更核心服务 -->
	<dubbo:service interface="com.lefu.alliance.api.inner.dubbo.CustomerFeeUpdateFacade" ref="customerFeeUpdateCoreFacade" group="core" retries="0" />
	
	<!-- 微信公众号关注活动引导服务 -->
	<dubbo:service interface="com.lefu.alliance.api.inner.dubbo.WeChatFollowActivityFacade" ref="weChatFollowActivityFacade" retries="0" />
	 
</beans>